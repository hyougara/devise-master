doctype html
html
  head
    title
      = full_title(yield(:title))
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'

  body
    .content
      .row
        = render 'layouts/header'
          - if flash[:notice]
            p.notice
              = notice
          - if flash[:alert]
            p.alert
              = alert
    .container
      .back-to-top
        p.up = link_to "#" do
          = fa_icon('angle-double-up 3x')
        end
      = yield
      p.pagenum